Bootstrap: docker
From: mnarayan/cpac

%help
    echo "You are in the C-PAC container."
    exec /code/run.py -h

%runscript
    echo "Running C-PAC!"
    echo "Arguments received: $*"
    exec echo "$@"
    exec /code/run.py "$@"
    
%post
    echo "Hello from inside the C-PAC container"
    echo "Install additional software here"
